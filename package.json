{
  "name": "@polight/lego",
  "version": "0.10.0",
  "description": "Lightweight future-proof web-components",
  "main": "lib/index.js",
  "dependencies": {
    "jsdom": "*"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
    "@babel/polyfill": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/register": "^7.0.0",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "mocha": "*",
    "mocha-jsdom": "*"
  },
  "scripts": {
    "test": "mocha --require @babel/register --require @babel/polyfill",
    "test-debug": "npm test -- debug -R spec",
    "compile": "LEGO_PATH=../lib/index.js ./bin/compile.js ./demo/components/ ./demo/components.js",
    "browserify": "browserify ./demo/components.js -o ./demo/components.js -t [ babelify --presets [ @babel/preset-env ] --plugins [ @babel/plugin-proposal-class-properties @babel/plugin-proposal-export-default-from @babel/plugin-proposal-export-namespace-from] ]",
    "compile-past": "npm run compile && npm run browserify",
    "watch": "npm run compile -- -w"
  },
  "bin": {
    "lego": "./bin/compile.js"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "keywords": [
    "webcomponents",
    "vue",
    "riot",
    "polymer"
  ],
  "author": "Vincent Agnano",
  "license": "MIT",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/polight/lego.git"
  },
  "bugs": {
    "url": "https://github.com/polight/lego/issues"
  },
  "homepage": "https://github.com/polight/lego#readme"
}
