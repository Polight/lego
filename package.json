{
  "name": "@polight/lego",
  "version": "0.5.0",
  "description": "Lightweight future-proof web-components",
  "main": "lib/index.js",
  "dependencies": {
    "jsdom": "*"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/register": "^7.0.0",
    "mocha": "*",
    "mocha-jsdom": "*"
  },
  "scripts": {
    "test": "mocha --require @babel/register --require @babel/polyfill",
    "compile": "LEGO_PATH=/lib/index.js ./bin/compile.js ./demo/components/ ./demo/components.js",
    "watch": "npm run compile -- -w"
  },
  "bin": {
    "lego": "./bin/compile.js"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "keywords": [
    "webcomponents",
    "vue",
    "riot",
    "polymer"
  ],
  "author": "Vincent Agnano",
  "license": "MIT",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/polight/lego.git"
  },
  "bugs": {
    "url": "https://github.com/polight/lego/issues"
  },
  "homepage": "https://github.com/polight/lego#readme"
}
